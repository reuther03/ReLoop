@page "/login"
@inject AuthService AuthService
@inject NavigationManager Navigation
@using ReLoop.Client.Models

<PageTitle>Login - ReLoop</PageTitle>

<section class="auth-page">
    <div class="auth-card">
        <h1>Welcome Back</h1>
        <p class="auth-subtitle">Sign in to your ReLoop account</p>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error">@errorMessage</div>
        }

        <EditForm Model="model" OnValidSubmit="HandleLogin" FormName="login">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="email">Email</label>
                <InputText id="email" class="form-control" @bind-Value="model.Email" placeholder="you@example.com" />
                <ValidationMessage For="() => model.Email" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="Your password" />
                <ValidationMessage For="() => model.Password" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-full" disabled="@submitting">
                @if (submitting)
                {
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </EditForm>

        <p class="auth-footer">
            Don't have an account? <a href="/register">Create one</a>
        </p>
    </div>
</section>

@code {
    private LoginModel model = new();
    private bool submitting;
    private string? errorMessage;

    private async Task HandleLogin()
    {
        submitting = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.LoginAsync(model);

            if (result.IsSuccess)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = result.Message ?? "Invalid email or password.";
            }
        }
        catch
        {
            errorMessage = "Unable to connect to the server. Please try again later.";
        }

        submitting = false;
    }
}
